<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_AssociationDashboard"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_button"
        android:text="Une association"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_FamilyDashboard"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/btn_StudentDashboard"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_button"
        android:text="Un étudiant"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_AssociationDashboard"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/btn_TravelerDashboard"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_button"
        android:text="Un voyageur"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <Button
        android:id="@+id/btn_FamilyDashboard"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_button"
        android:text="Un parent"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_TravelerDashboard"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/btn_DefaultDashboard"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_button"
        android:text="Un utilisateur par défaut"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_StudentDashboard"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="196dp"
        android:layout_height="56dp"
        android:fontFamily="casual"
        android:text="Je suis  :"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_TravelerDashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

</androidx.constraintlayout.widget.ConstraintLayout>
