<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".document.ViewDocumentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Mon Document"
        app:navigationIcon="@drawable/back_button" />

    <EditText
        android:id="@+id/NomDocument"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ma carte d'identiÃ©"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/documentFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choisir un fichier"
        app:layout_constraintTop_toBottomOf="@id/NomDocument"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button" />

    <ImageView
        android:id="@+id/documentPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/documentFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="350dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_check_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/deleteDocumentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Supprimer le document"
        app:layout_constraintTop_toBottomOf="@id/documentPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_red"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>
