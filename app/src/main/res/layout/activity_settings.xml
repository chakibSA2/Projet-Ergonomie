<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parametre.SettingsActivity"
    android:padding="24dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back_button"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="ParamÃ¨tres"
        app:titleTextColor="@android:color/black" />

    <Button
        android:id="@+id/changeProfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modifier le profil"
        app:layout_constraintTop_toBottomOf="@id/settings_Toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/changePinButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modifier le code pin"
        app:layout_constraintTop_toBottomOf="@id/changeProfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/ShareItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inviter des personnes"
        app:layout_constraintTop_toBottomOf="@id/changePinButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>